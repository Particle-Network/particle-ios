# Uncomment the next line to define a global platform for your project
platform :ios, '13.0'

target 'Demo' do
  use_frameworks!
  source 'https://github.com/CocoaPods/Specs.git'
    pod 'ParticleWalletGUI', '0.11.1'
    pod 'ParticleWalletAPI', '0.11.1'
    pod 'ParticleNetworkBase', '0.11.1'
    pod 'ParticleAuthService', '0.11.1'
    pod 'ParticleWalletConnect', '0.11.1'
    
    pod 'ParticleConnect', '0.1.50'
    pod 'ConnectWalletConnectAdapter', '0.1.50'
    pod 'ConnectEVMAdapter', '0.1.50'
    pod 'ConnectSolanaAdapter', '0.1.50'
    pod 'ConnectPhantomAdapter', '0.1.50'
    pod 'ConnectCommon', '0.1.50'
    
    # if you use ParticleWalletGUI, you need add this line.
    pod 'SkeletonView', :git => 'https://github.com/SunZhiC/SkeletonView.git', :branch => 'main'
    # if you use ParticleWalletConnect or ConnectWalletConnectAdapter, you need add this line
    pod 'WalletConnectSwift', :git => 'https://github.com/SunZhiC/WalletConnectSwift', :branch => 'master'
end


post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
    config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      end
    end
  
  
  # This is necessary for Xcode 14, because it signs resource bundles by default
      # when building for devices.
      installer.target_installation_results.pod_target_installation_results
        .each do |pod_name, target_installation_result|
        target_installation_result.resource_bundle_targets.each do |resource_bundle_target|
          resource_bundle_target.build_configurations.each do |config|
            config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
          end
        end
      end
end
